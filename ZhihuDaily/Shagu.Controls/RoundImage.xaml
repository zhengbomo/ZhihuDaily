<UserControl x:Class="Shagu.Controls.RoundImage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             x:Name="_this"
             d:DesignHeight="300"
             d:DesignWidth="400"
             mc:Ignorable="d">

    <Ellipse x:Name="path"
             Width="{Binding Width}"
             Height="{Binding Height}"
             HorizontalAlignment="{Binding ElementName=_this,
                                           Path=HorizontalAlignment}"
             VerticalAlignment="{Binding ElementName=_this,
                                         Path=VerticalAlignment}"
             DataContext="{Binding ElementName=_this}"
             Fill="Gray"
             Stretch="{Binding ElementName=_this,
                               Path=Stretch}"
             Stroke="{Binding Stroke}"
             StrokeThickness="{Binding StrokeThickness}" />
</UserControl>
